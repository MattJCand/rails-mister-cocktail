<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path('vintage.jpg') %>');">
  <div class="banner-content">
    <h1>Welcome to Mr Cocktail</h1>
    <%= link_to "Create Cocktail", new_cocktail_path, class:"btn btn-primary" %>
  </div>
</div>

<div style="background-color: #2F707A">
<div class="container">
<h1>Cocktails</h1>
  <div class="row">
   <%@cocktails.each do |cocktail|%>
    <div class="col-xs-12 col-sm-4">
    <% if cocktail.photo? %>
      <div class="card" style="margin-top: 5%; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill %>')">
      <% else  %>
      <div class="card" style="margin-top: 5%; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('cocktail.jpg') %>');">
      <% end %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
           <%= link_to "", cocktail_path(cocktail), class: "card-link"%>
    </div>
  </div>
   <% end %>
</div>
</div>
