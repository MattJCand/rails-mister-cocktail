<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "Mr Cocktail", cocktails_path, class:"btn btn-primary"%>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
   <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-info small"%>
  </div>
</div>

<h2 style="text-align: center;"><%=@cocktail.name%></h2>

<% if @cocktail.photo? %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="thumbnail">
           <%= cl_image_tag @cocktail.photo.path, width: 300, height: 300, crop: :fill %>
          <div class="caption text-center">
            <p><%= @cocktail.name %></p>
          </div>
      </div>
    </div>
    </div>
  </div>
</div>
<% end %>

<div class="container" style="margin-top: 5%;">
  <table class="table">
    <thead>
      <tr>
        <th>Ingredient</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description%></td>
        <td><%= link_to "Delete Dose", dose_path(dose), method: :delete, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


