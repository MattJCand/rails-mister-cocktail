<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "Mr Cocktail", cocktails_path, class:"btn btn-primary"%>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
   <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-info small"%>
  </div>
</div>

<h2 style="text-align: center;"><%=@cocktail.name%></h2>

<div class="container" style="margin-top: 5%;">
  <table class="table">
    <thead>
      <tr>
        <th>Ingredient</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description%></td>
        <td><%= link_to "Delete Dose", dose_path(dose), method: :delete, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
